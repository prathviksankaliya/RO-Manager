<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10mdp"
    app:cardElevation="@dimen/_6mdp"
    android:layout_margin="@dimen/_6mdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_5mdp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/igCustomerImage"
            android:layout_width="@dimen/_42mdp"
            android:layout_height="@dimen/_42mdp"
            android:src="@drawable/me"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/roundedImageView" />

        <TextView
            android:id="@+id/txCustomerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6mdp"
            android:fontFamily="@font/nunito_bold"
            android:maxLength="23"
            android:maxLines="1"
            android:layout_marginEnd="@dimen/_3mdp"
            android:text="Prathvik Sankaliyayyyyyyyyyyyyyyyyyyyyyyyyyy"
            android:textColor="@color/black"
            android:textSize="@dimen/_16font_mdp"
            app:layout_constraintEnd_toStartOf="@+id/txCustomerPrice"
            app:layout_constraintStart_toEndOf="@+id/igCustomerImage"
            app:layout_constraintTop_toTopOf="@+id/igCustomerImage" />

        <TextView
            android:id="@+id/txCustomerMsg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="500 Credit added on 12 Aug 2023"
            app:layout_constraintBottom_toBottomOf="@+id/igCustomerImage"
            app:layout_constraintEnd_toEndOf="@+id/txCustomerName"
            app:layout_constraintStart_toStartOf="@+id/txCustomerName"
            app:layout_constraintTop_toBottomOf="@+id/txCustomerName" />

        <TextView
            android:id="@+id/txCustomerPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:text="â‚¹1200"
            android:layout_marginEnd="@dimen/_3mdp"
            android:textColor="@color/red"
            android:textSize="@dimen/_15font_mdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txCustomerName" />

        <TextView
            android:id="@+id/txCustomerStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_semibold"
            android:text="ADVANCE"
            android:textSize="@dimen/_10font_mdp"
            app:layout_constraintBottom_toBottomOf="@+id/txCustomerMsg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txCustomerPrice"
            app:layout_constraintTop_toBottomOf="@+id/txCustomerPrice" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>