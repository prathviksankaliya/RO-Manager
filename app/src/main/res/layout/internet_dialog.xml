<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    app:cardCornerRadius="@dimen/_16mdp"
    app:cardElevation="@dimen/_10mdp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="@dimen/_100mdp"
            android:layout_height="@dimen/_100mdp"
            android:src="@drawable/ic_baseline_signal_wifi_off_24"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OOPS!"
            android:gravity="center"
            android:fontFamily="@font/nunito_bold"
            android:textSize="@dimen/_28font_mdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Internet Connection"
            android:gravity="center"
            android:layout_marginTop="@dimen/_8mdp"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="@dimen/_24font_mdp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Check Your Connection"
            android:gravity="center"
            android:fontFamily="@font/nunito_semibold"
            android:textSize="@dimen/_14font_mdp"
            android:textColor="@color/black"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRetry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_bg"
            android:padding="@dimen/_12mdp"
            android:textSize="@dimen/_16font_mdp"
            android:fontFamily="@font/nunito_bold"
            android:textStyle="bold"
            android:text="Retry"
            android:textColor="@color/white"
            android:layout_marginVertical="24dp"
            android:layout_marginHorizontal="@dimen/_16mdp"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>